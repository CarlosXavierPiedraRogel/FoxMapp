<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal utilizando RelativeLayout -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- ImageView para mostrar la imagen -->
    <ImageView
        android:id="@+id/imageView_foto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_foto"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="" />

    <!-- TextView para mostrar el mensaje si no hay imagen -->
    <TextView
        android:id="@+id/txt_no_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_foto"
        android:gravity="center"
        android:text="No Imagen"
        android:visibility="visible" />

    <!-- BotÃ³n para cargar una nueva imagen -->
    <Button
        android:id="@+id/button_foto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Tomar Foto"
        android:textColor="#212121" />

</RelativeLayout>


